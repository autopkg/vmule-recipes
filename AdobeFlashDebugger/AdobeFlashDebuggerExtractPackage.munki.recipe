<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string> 
- Downloads the latest Adobe Flash Player installer, 
- extracts the embedded package inside Install Adobe Flash Player.app, 
- delete PreferencePanes files
- wraps it in a disk image, and imports it into Munki.
    
This pkg created with this recipe will just install:
    
-  /Library/Internet\ Plug-Ins/Flash\ Player.plugin
-  /Library/Internet\ Plug-Ins/flashplayer.xpt</string>
    <key>Identifier</key>
    <string>com.github.vmule.munki.FlashDebuggerExtractPackage</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>AdobeFlashDebugger</string>
        <key>pkginfo</key>
        <dict>
            <key>catalogs</key>
            <array>
                <string>unstable</string>
            </array>
            <key>description</key>
            <string>Adobe® Flash® Debugger.</string>
            <key>display_name</key>
            <string>Adobe Flash Debugger</string>
            <key>name</key>
            <string>%NAME%</string>
            <key>unattended_install</key>
            <true/>
        </dict>
    </dict>
    <key>MinimumVersion</key>
    <string>0.2.0</string>
    <key>ParentRecipe</key>
    <string>com.github.vmule.download.AdobeFlashDebugger</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkgroot</key>
                <string>%RECIPE_CACHE_DIR%/PkgRoot</string>
                <key>pkgdirs</key>
                <dict/>
            </dict>
            <key>Processor</key>
            <string>PkgRootCreator</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>flat_pkg_path</key>
                <string>%pathname%/Install Adobe Flash Player Debugger.app/Contents/Resources/Adobe Flash Player Debugger.pkg</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Payload</string>
            </dict>
            <key>Processor</key>
            <string>FlatPkgUnpacker</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/Payload/AdobeFlashPlayerComponent.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/unpacked_Payload</string>
            </dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>source</key>
                <string>%RECIPE_CACHE_DIR%/unpacked_Payload/Library</string>
                <key>target</key>
                <string>%pkgroot%/Library</string>
            </dict>
            <key>Processor</key>
            <string>FileMover</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkgroot</key>
                <string>%pkgroot%</string>
                <key>finalize_script_path</key>
                <string>%RECIPE_CACHE_DIR%/Payload/AdobeFlashPlayerComponent.pkg/Scripts</string>
            </dict>
            <key>Processor</key>
            <string>AdobeFlashDmgUnpacker</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkg_request</key>
                <dict>
                    <key>pkgroot</key>
                    <string>%pkgroot%</string>
                    <key>pkgdir</key>
                    <string>%RECIPE_CACHE_DIR%/</string>
                    <key>pkgname</key>
                    <string>%NAME%</string>
                    <key>pkgtype</key>
                    <string>flat</string>
                    <key>id</key>
                    <string>com.adobe.flash.debugger</string>
                    <key>version</key>
                    <string>%version%</string>
                    <key>infofile</key>
                    <string></string>
                    <key>chown</key>
                    <array></array>
                    <key>resources</key>
                    <string></string>
                    <key>scripts</key>
                    <string></string>
                </dict>
            </dict>
            <key>Processor</key>
            <string>PkgCreator</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>dmg_root</key>
                <string>%RECIPE_CACHE_DIR%/%NAME%.pkg</string>
                <key>dmg_path</key>
                <string>%RECIPE_CACHE_DIR%/%NAME%.dmg</string>
            </dict>
            <key>Processor</key>
            <string>DmgCreator</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/%NAME%.pkg</string>
            </dict>
            <key>Processor</key>
            <string>MunkiImporter</string>
        </dict>
        <dict>
        <key>Processor</key>
        <string>MunkiCatalogBuilder</string>
        </dict>
    </array>
</dict>
</plist>
